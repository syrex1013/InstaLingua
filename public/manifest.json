{
  "manifest_version": 3,
  "name": "InstaLingua",
  "version": "1.0.0",
  "description": "Translate Polish voice input into English text with nice formatting.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "InstaLingua",
    "default_popup": "popup.html"
  },
  "permissions": ["background"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
